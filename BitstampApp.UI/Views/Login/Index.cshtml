@using BitstampApp.Core.Models

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Login</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
 
  <link rel="stylesheet" href="/Panel/plugins/fontawesome-free/css/all.min.css">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="/Panel/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/Panel/dist/css/Adminlte.min.css">
</head>
<body class="hold-transition login-page">
<div class="login-box">
  <div class="login-logo">
    <a href="#."><b>Login</b></a>
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Sign in</p>
      @{Html.BeginForm("Login", "Login", FormMethod.Post);
 
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Username" name="Username" required>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fa fa-person"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="password" class="form-control" placeholder="Password" name="Password" required>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
         
          <!-- /.col -->
          <div class="col-12">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
            <p class="text-danger">@TempData["Message"]</p>
          </div>
          <!-- /.col -->
        </div>
       Html.EndForm();}

     
      <a href="/Login/Register">Register</a>
    </div>
    <!-- /.login-card-body -->
  </div>
</div>
<!-- /.login-box -->

<!-- jQuery -->
<script src="/Panel/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="/Panel/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="/Panel/dist/js/Adminlte.min.js"></script>
</body>
</html>

 